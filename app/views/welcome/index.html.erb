<div class="container">
        <div class="row">
          
            <% @posts.each do |post| %>
              <div class="col-md-4 col-sm-6 col-xs-12 gallery-grid mix cat1" style="padding: 0px 50px 0px 50px;">
                  <%= link_to deust_matiere_post_path(post.deust, post.matiere, post) do %>

                <div class="grid effect-apollo"> 
                  <div class="figcaption">
                    <p style="font-size: 20px;"><%= post.name %></p>
                  </div> 
                </div> 
                  <% if post.pdfs.presence %>
                    <iframe src=<%= post.pdfs.first.link %> width="240" height="240"></iframe>
                  <% else %>
                    <% if post.images.presence %>
                      <%= image_tag post.images.first.image.url(:thumb), class: "post_image" %>
                    <% end %>
                  <% end %>
                <p style="font-size: 20px; margin-top: 10px; margin-bottom: 10px"><%= post.name %></p>
              <% end %>
              </div>
            <% end %>

     </div>     

        </div>

<section class="deusts" id="deusts">
<div class="container text-center">

    <% @deusts.each do |deust| %>

        <% if deust.matieres.presence %>
        
       
        <h3 class="heading-agileinfo2 text-center" style="color: #223d61; margin-top: 30px;"><%= deust.name %></h3>
                <div class="row">
                    <% deust.matieres.first(6).each do |matiere| %>
                        <div class="col-md-4 col-sm-6 col-xs-6 gallery-grid">
                          <%= link_to deust_matiere_path(deust, matiere) do %>
                            <div class="grid effect-apollo"> 
                              <%= image_tag matiere.image.url(:large), class: "gallery-image" %>
                              <div class="figcaption">
                                <p style="font-size: 20px;"><%= matiere.name %></p>
                              </div> 
                            </div> 
                          <% end %> 
                          <p style="font-size: 20px;"><%= matiere.name %></p>
                        </div>
                    <% end %>
                </div>

            <div class="welcome-plus-link text-right">
                <%= link_to "Tous les modules", deust %>    
            </div>
            
        <% end %>
    <% end %>  
</div>
</section>

