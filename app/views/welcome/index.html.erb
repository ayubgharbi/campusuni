                     style="display:inline-block;width:300px;height:600px"
                     data-ad-client="ca-pub-7690261265789990"
                     data-ad-slot="1357867834"></ins>
                <script>
                (adsbygoogle = window.adsbygoogle || []).push({});
                </script>
                </div>
                <div class="ad-unit text-center">
                <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
                <!-- ad-2019-2 -->
                <ins class="adsbygoogle"
                     style="display:block"
                     data-ad-client="ca-pub-7690261265789990"
                     data-ad-slot="4549285187"
                     data-ad-format="auto"
                     data-full-width-responsive="true"></ins>
                <script>
                (adsbygoogle = window.adsbygoogle || []).push({});
                </script>
                </div>
                <div class="ad-unit text-center">
                <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
                <!-- ad2019 -->
                <ins class="adsbygoogle"
                     style="display:inline-block;width:300px;height:1050px"
                     data-ad-client="ca-pub-7690261265789990"
                     data-ad-slot="1707499424"></ins>
                <script>
                (adsbygoogle = window.adsbygoogle || []).push({});
                </script>
                </div>
        </div>
    </div>
</div>



<section id="counter" class="counter">
<div class="container-fluid">
    <div class="row">
        <div class="main_counter sections">
            <div class="single_left_counter_bg">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="single_counter_left">
                        <h2> <br />  <br /></h2>
                    </div>
                </div>
            </div>
            <div class="col-md-7 col-sm-12 col-xs-12">
                <div class="single_counter_right_area text-center">
                    <div class="row">
                        <div class="col-md-4 col-sm-12">
                            <div class="single_counter_right">
                                <i class="fa fa-arrow-up"></i>
                                <h2 class="statistic-counter"><%= Deust.count %></h2>
                                <p>FILIERE</p>
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-12">
                            <div class="single_counter_right">
                                <i class="fa fa-book"></i>
                                <h2 class="statistic-counter"><%= Matiere.count %></h2>
                                <p>MODULES</p>
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-12">
                            <div class="single_counter_right">
                                <i class="fa fa-file"></i>
                                <h2 class="statistic-counter"><%= Post.count %></h2>
                                <p>COURS/TDS/CCS/TP</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</section>



