<% provide(:title, "Acceuil") %>

        


<section class="home" id"home">
    
                <div class="container" style="margin-top: 100px">
                    <div class="row">
                        <div class="col-sm-12 ">
                                        <h1 style="font-family: HelveticaRoundedLTStd-Bd; color: black">Facult√© des Sciences et Techniques</h1> 
                                        <h2 style="font-family: HelveticaRoundedLTStd-Bd; color:black">COURS/TDS/CCS</h2>
                               

                        </div>
                    </div>
                </div>
</section>


<section class="deusts" id="deusts">
<div class="container">

    <% @deusts.each do |deust| %>

        <% if deust.matieres.presence %>
        <h5 class="heading-agileinfo text-center" style="color: #223d61; margin-top: 30px;"><%= deust.name %></h5>
            <% deust.matieres.first(6).each_slice(3) do |matieres| %>
                <div class="row">
                    <% matieres.each do |matiere| %>
                        <div class="col-sm-4 col-xs-6 gallery-grid">
                          <%= link_to deust_matiere_path(deust, matiere) do %>
                            <div class="grid effect-apollo"> 
                              <%= image_tag matiere.image.url(:large), class: "gallery-image" %>
                              <div class="figcaption">
                                <p style="font-size: 20px;"><%= matiere.name %></p>
                              </div> 
                            </div> 
                          <% end %> 
                          <p style="font-size: 20px;"><%= matiere.name %></p>
                        </div>
                    <% end %>
                </div>
            <% end %>
            <%= link_to "Tous les modules", deust, class: "welcome-plus-link" %>
        <% end %>
    <% end %>  
</div>
</section>

        <section id="counter" class="counter">
            <div class="container-fluid">
                <div class="row">
                    <div class="main_counter sections">
                        <div class="single_left_counter_bg">
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <div class="single_counter_left">
                                    <h2>Compteur <br />  <br /></h2>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-7 col-sm-12 col-xs-12">
                            <div class="single_counter_right_area text-center">
                                <div class="row">
                                    <div class="col-md-4 col-sm-12">
                                        <div class="single_counter_right">
                                            <i class="fa fa-arrow-up"></i>
                                            <h2 class="statistic-counter"><%= Deust.count %></h2>
                                            <p>FILIERE</p>
                                        </div>
                                    </div>
                                    <div class="col-md-4 col-sm-12">
                                        <div class="single_counter_right">
                                            <i class="fa fa-book"></i>
                                            <h2 class="statistic-counter"><%= Matiere.count %></h2>
                                            <p>MODULES</p>
                                        </div>
                                    </div>
                                    <div class="col-md-4 col-sm-12">
                                        <div class="single_counter_right">
                                            <i class="fa fa-file"></i>
                                            <h2 class="statistic-counter"><%= Post.count %></h2>
                                            <p>COURS/TDS/CCS/TP</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>









