<div class="container">
    <div class="row">
        <div class="col-md-8">
            <br>
            <br>
            <br>
            <br>
            <br>
            <!-- ad1 -->
                <ins class="adsbygoogle"
                    style="display:block"
                    data-ad-client="ca-pub-7690261265789990"
                    data-ad-slot="8002102239"
                    data-ad-format="auto"
                    data-full-width-responsive="true"></ins>
                <script>
                (adsbygoogle = window.adsbygoogle || []).push({});
            </script>
            <% @posts.each do |post| %>
                
                    <%= link_to deust_matiere_post_path(post.deust, post.matiere, post) do %>
                        <div class="post-home" style="margin-top: 30px">
                        <div class="row">
                        
                        <div class="col-md-4 col-sm-4 col-xs-4">
                            <%= image_tag post.matiere.image.url(:large), class: "post_image" %>
                        </div>
                        <div class="col-md-8 col-sm-8 col-xs-8">
                            <h5 class="post-home-name"><%= post.name %> </h5>
                            <h5 class="matiere-home-name"><%= post.matiere.name %> </h5>
                            <h5><%= post.deust.name %> - <%= post.matiere.semester.name %><h5/>
                        </div>

                        </div>
                        </div>
                    <% end %>
            <% end %>
            <%= will_paginate @posts %>
            
            <div class="home-deusts">
            <% @deusts.each do |deust| %>
                <% if deust.name != "Livres" %>
                <% if deust.matieres.presence %>
                    <h5 class="heading-agileinfo2 text-center"><%= deust.name %></h5>
                    <div class="row">
                        <% deust.matieres.first(3).each do |matiere| %>
                            <div class="col-md-4 col-sm-4 col-xs-4 gallery-grid">
                            <%= link_to deust_matiere_path(deust, matiere) do %>
                                <div class="grid effect-apollo"> 
                                <%= image_tag matiere.image.url(:large), class: "gallery-image" %>
                                <div class="figcaption">
                                    <p style="font-size: 20px;"><%= matiere.name %></p>
                                </div> 
                                </div> 
                            <% end %> 
                            <p style="font-size: 14px;"><%= matiere.name %></p>
                            </div>
                        <% end %>
                    </div>
                    <div class="welcome-plus-link text-right">
                        <%= link_to "Tous les modules", deust %>    
                    </div>
            
                <% end %>
            <% end %>
            <% end %>  
            </div>
        </div>
        <div class="col-md-4" style="margin-top: 80px">
            <!-- text / image responsive -->
            <ins class="adsbygoogle"
                style="display:block"
                data-ad-client="ca-pub-7690261265789990"
                data-ad-slot="1471753835"
                data-ad-format="auto"
                data-full-width-responsive="true"></ins>
            <script>
            (adsbygoogle = window.adsbygoogle || []).push({});
            </script>
                <div class="ad-unit1 text-center">
