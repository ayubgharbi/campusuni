<div class="container">
    <div class="row">
        <div class="col-md-8">
            <br>
            <br>
            <br>
            <br>
            <br>
            <% @posts.each do |post| %>
                
                    <%= link_to deust_matiere_post_path(post.deust, post.matiere, post) do %>
                        <div class="post-home">
                        <div class="row">
                        
                        <div class="col-md-4 col-sm-4 col-xs-4">
                            <%= image_tag post.matiere.image.url(:large), class: "post_image" %>
                        </div>
                        <div class="col-md-8 col-sm-8 col-xs-8">
                            <h5 class="post-home-name"><%= post.name %> </h5>
                            <h5 class="matiere-home-name"><%= post.matiere.name %> </h5>
                            <h5><%= post.deust.name %> - <%= post.matiere.semester.name %><h5/>
                        </div>

                        </div>
                        </div>
                    <% end %>
            <% end %>
            <%= will_paginate @posts %>
            
            <div class="home-deusts">
            <% @deusts.each do |deust| %>
                <% if deust.matieres.presence %>
                    <h5 class="heading-agileinfo2 text-center"><%= deust.name %></h5>
                    <div class="row">
                        <% deust.matieres.first(3).each do |matiere| %>
                            <div class="col-md-4 col-sm-6 col-xs-6 gallery-grid">
                            <%= link_to deust_matiere_path(deust, matiere) do %>
                                <div class="grid effect-apollo"> 
                                <%= image_tag matiere.image.url(:large), class: "gallery-image" %>
                                <div class="figcaption">
                                    <p style="font-size: 20px;"><%= matiere.name %></p>
                                </div> 
                                </div> 
                            <% end %> 
                            <p style="font-size: 14px;"><%= matiere.name %></p>
                            </div>
                        <% end %>
                    </div>
                    <div class="welcome-plus-link text-right">
                        <%= link_to "Tous les modules", deust %>    
                    </div>
            
                <% end %>
            <% end %>  
            </div>
        </div>
        <div class="col-md-4" style="margin-top: 80px">
            <div class="portfolio_btn_area text-center">
                <%= social_share_button_tag('Share to Facebook', :url => "https://univercours.com/") %>
            </div>
            <% Post.last(10).each do |post| %>
                <div class="col-md-12 col-sm-12 col-xs-12 gallery-grid mix <%= post.category.name.last(6) %>" style="padding: 0px 50px 0px 50px;">
                    <%= link_to deust_matiere_post_path(post.deust, post.matiere, post) do %>
                    <p style="margin-top: 10px; margin-bottom: 10px"><%= post.name %></p>
                    <% end %>
                </div>
            <% end %>
        </div>
    </div>
</div>



<section id="counter" class="counter">
<div class="container-fluid">
    <div class="row">
        <div class="main_counter sections">
            <div class="single_left_counter_bg">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="single_counter_left">
                        <h2> <br />  <br /></h2>
                    </div>
                </div>
            </div>
            <div class="col-md-7 col-sm-12 col-xs-12">
                <div class="single_counter_right_area text-center">
                    <div class="row">
                        <div class="col-md-4 col-sm-12">
                            <div class="single_counter_right">
                                <i class="fa fa-arrow-up"></i>
                                <h2 class="statistic-counter"><%= Deust.count %></h2>
                                <p>FILIERE</p>
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-12">
                            <div class="single_counter_right">
                                <i class="fa fa-book"></i>
                                <h2 class="statistic-counter"><%= Matiere.count %></h2>
                                <p>MODULES</p>
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-12">
                            <div class="single_counter_right">
                                <i class="fa fa-file"></i>
                                <h2 class="statistic-counter"><%= Post.count %></h2>
                                <p>COURS/TDS/CCS/TP</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</section>





