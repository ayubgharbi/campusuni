<% provide(:title, "#{@deust.name}") %>
<div class="container">
    <div class="row">
        <div class="col-md-8" >
            <div id="lab" class="w3ls-section gallery text-center">
                <h5 class="heading-agileinfo2"><%= @deust.name %></h5>
                <div class="main_mix_menu">
                    <ul>
                        <li class="btn btn-primary filter" data-filter="all" style="border-radius: 0px;">tous</li>
                        <% @semesters.each do |semester| %>
                            <li data-filter=".<%= semester.name.last(6) %>" class="btn btn-primary filter" style="border-radius: 0px;"><%= semester.name %></li>
                        <% end %> 
                    </ul>
                </div>
                <div id="mixcontent" class="mixcontent">
                    <div class="gallery-grids">
                        <% if session[:user_id] %>
                            <%= link_to "Nouveau matiere", new_deust_matiere_path(@deust) %>
                        <% end %>
                        <% @deust.semesters.each do |semester| %>
                            <% semester.matieres.each_slice(3) do |matieres| %>
                                <div class="row">
                                    <% matieres.each do |matiere| %>
                                        <div class="col-sm-4 col-xs-6 gallery-grid mix <%= matiere.semester.name.last(6) %>">
                                            <%= link_to deust_matiere_path(@deust, matiere) do %>
                                                <div class="grid effect-apollo"> 
                                                    <%= image_tag matiere.image.url(:large), class: "gallery-image" %>
                                                    <div class="figcaption">
                                                        <p style="font-size: 20px;"><%= matiere.name %></p>							
                                                    </div> 
                                                </div> 
                                                <p class="module-name"><%= matiere.name %></p>	
                                            <% end %>
                                        </div>
                                    <% end %>
                                </div>
                            <% end %>
                        <% end %>     
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4" style="margin-top: 80px">
            <div class="portfolio_btn_area text-center">
                <%= link_to "retour", root_path, class: "btn btn-md" %>
                <div class="ad-unit">
                    <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
                    <!-- index-vertical-banner -->
                    <ins class="adsbygoogle"
                        style="display:inline-block;width:300px;height:600px"
                        data-ad-client="ca-pub-7690261265789990"
                        data-ad-slot="1357867834"></ins>
                    <script>
                    (adsbygoogle = window.adsbygoogle || []).push({});
                    </script>
                </div>
            </div>
        </div>
    </div>
</div>
