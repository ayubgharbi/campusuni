<% provide(:title, "#{@deust.name}") %>

<div class="container" style="padding-top: 30px;">
    <div id="lab" class="w3ls-section gallery">
    <div class="container">
        <h5 class="heading-agileinfo text-center" style="color: #223d61;"><%= @deust.name %></h5>
        <div class="main_mix_menu text-center">
            <ul>
                <li class="btn btn-primary filter" data-filter="all" style="border-radius: 0px;">tous</li>
                <% @semesters.each do |semester| %>
                    <li data-filter=".<%= semester.name.last(6) %>" class="btn btn-primary filter" style="border-radius: 0px;"><%= semester.name %></li>
                <% end %> 
            </ul>
        </div>
        <div id="mixcontent" class="mixcontent">
            <div class="gallery-grids">
                <% if session[:user_id] %>
                    <%= link_to "Nouveau matiere", new_deust_matiere_path(@deust) %>
                <% end %>
                <% @deust.semesters.each do |semester| %>
                    <% semester.matieres.each_slice(3) do |matieres| %>
                        <div class="row">
                            <% matieres.each do |matiere| %>
                                <div class="col-sm-4 col-xs-6 gallery-grid mix <%= matiere.semester.name.last(6) %>">
                                    <%= link_to deust_matiere_path(@deust, matiere) do %>
                                        <div class="grid effect-apollo"> 
                                            <%= image_tag matiere.image.url(:large), class: "gallery-image" %>
                                            <div class="figcaption">
                                                <p style="font-size: 20px;"><%= matiere.name %></p>
                                            </div> 
                                        </div> 

                                        <p style="font-size: 20px;"><%= matiere.name %></p>
                                    <% end %>
                                </div>
                            <% end %>
                        </div>
                    <% end %>
                <% end %>
                <div class="clearfix"> </div> 
                </div>
            </div>
        </div>
    </div>
    </div>


        <section id="counter" class="counter">
            <div class="container-fluid">
                <div class="row">
                    <div class="main_counter sections">
                        <div class="single_left_counter_bg">
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <div class="single_counter_left">
                                    <h2> <br />  <br /></h2>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-7 col-sm-12 col-xs-12">
                            <div class="single_counter_right_area text-center">
                                <div class="row">
                                    <div class="col-md-6 col-sm-12">
                                        <div class="single_counter_right">
                                            <i class="fa fa-book"></i>
                                            <h2 class="statistic-counter"><%= @deust.matieres.count %></h2>
                                            <p>MODULES</p>
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-sm-12">
                                        <div class="single_counter_right">
                                            <i class="fa fa-file"></i>
                                            <h2 class="statistic-counter"><%= @deust.posts.count %></h2>
                                            <p>COURS/TDS/CCS/TP</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>





