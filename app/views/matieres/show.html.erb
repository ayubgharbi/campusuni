<% provide(:title, "#{@matiere.name}") %>
    <div class="container">
        <div class="row">
            <div class="col-md-8" >
                <div id="lab" class="w3ls-section gallery">
                        <h5 class="heading-agileinfo" style="color: #223d61;"><%= @matiere.deust.name %> / <%= @matiere.name %></h5>
                        <div class="main_mix_menu">
                            <ul>
                            <li class="btn btn-primary filter" data-filter="all" style="border-radius: 0px;">tous</li>
                            <% @categories.each do |category| %>
                                <% if category.posts.where(matiere_id: @matiere.id).presence %>
                                <li data-filter=".<%= category.name.last(6) %>" class="btn btn-primary filter" style="border-radius: 0px;"><%= category.name %></li>
                                <% end %>
                            <% end %> 
                            </ul>
                        </div>
                        <div id="mixcontent" class="mixcontent">
                            <div class="gallery-grids">
                                <% if session[:user_id] %>
                                    <%= link_to "Nouveau post", new_deust_matiere_post_path(@deust, @matiere) %>
                                <% end %>
                                <div class="row">
                                    <% @matiere.posts.order("created_at DESC").each do |post| %>
                                        <%= link_to deust_matiere_post_path(@deust, @matiere, post) do %>
                                            <div class="post-home gallery-grid mix <%= post.category.name.last(6) %>">
                                            <div class="row">
                                            
                                            <div class="col-md-4 col-sm-4 col-xs-4">
                                                <% if post.pdfs.presence %>
                                                    <iframe src=<%= post.pdfs.first.link %> width="240" height="240"></iframe>
                                                <% end %>
                                            </div>
                                            <div class="col-md-8 col-sm-8 col-xs-8">
                                                <h5 class="post-home-name"><%= post.name %> </h5>
                                                <h5 class="matiere-home-name"><%= post.matiere.name %> </h5>
                                                <h5><%= post.deust.name %> - <%= post.matiere.semester.name %><h5/>
                                            </div>

                                            </div>
                                        
                                        <% end %>
                                    </div>
                                    <% end %>
                                </div> 
                            </div>
                        </div>
                        
                        <div class="gap"></div>
                </div>
            </div>
            <div class="col-md-4" style="margin-top: 80px">
                <div class="portfolio_btn_area text-center">
                    <h5 style="font-family: 'Indie Flower', cursive;">Partagez Univercours avec vous amis</h5>
                    <%= social_share_button_tag('Share to Facebook', :url => root_path) %>
                    <%= link_to "retour", deust_path(@deust), class: "btn btn-md" %>
                </div>
                <% @matiere.posts.last(10).each do |post| %>
                    <div class="col-md-12 col-sm-12 col-xs-12 gallery-grid mix <%= post.category.name.last(6) %>" style="padding: 0px 50px 0px 50px;">
                        <%= link_to deust_matiere_post_path(post.deust, post.matiere, post) do %>
                        <p style="margin-top: 10px; margin-bottom: 10px"><%= post.name %></p>
                        <% end %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
